{
  "name": "tweek-authoring",
  "version": "1.0.0-rc9",
  "main": "src/server.js",
  "repository": "Soluto/tweek",
  "author": "Soluto",
  "license": "MIT",
  "engines": {
    "node": ">=10.15.0"
  },
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.spec.ts --exit",
    "build": "yarn run clean && tsc && cpr ./src/search-index/build/ ./dist/search-index/build/ -o",
    "clean": "rimraf dist",
    "start": "ts-node ./src/server.ts",
    "start:release": "node ./dist/server.js",
    "start:debug": "node --inspect=5858 ./dist/server.js",
    "start:dev": "cross-env GIT_SSH=../ssh-helper nodemon --watch src --ext ts --exec yarn -- start --GIT_USER git --GIT_URL ssh://git@localhost:4001/tweek/repo --GIT_PUBLIC_KEY_PATH ../../deployments/dev/ssh/tweekgit.pub --GIT_PRIVATE_KEY_PATH ../../deployments/dev/ssh/tweekgit",
    "start:full-env": "yarn docker-compose up -d api publishing git && yarn start:dev",
    "logs": "yarn docker-compose logs",
    "docker-compose": "docker-compose -f ../../deployments/dev/docker-compose.yml -f ../../deployments/dev/docker-compose.override.yml",
    "teardown": "yarn docker-compose down --remove-orphans",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write **/*.ts"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "bunyan": "^1.8.14",
    "express": "^4.17.1",
    "fast-json-patch": "^3.0.0-1",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "highland": "^2.13.5",
    "jszip": "^3.5.0",
    "lock-queue": "^1.0.1",
    "lunr": "^2.3.9",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nconf": "^0.10.0",
    "node-getopt": "^0.3.2",
    "nodegit": "^0.27.0",
    "object-hash": "^2.0.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-strategy": "^1.0.0",
    "ramda": "^0.27.1",
    "rxjs": "^6.6.2",
    "shortid": "^2.2.15",
    "simple-git": "^2.20.1",
    "sshpk": "^1.16.1",
    "typescript-ioc": "^3.2.2",
    "typescript-rest": "^3.0.2",
    "typescript-rest-ioc": "^1.0.0",
    "typescript-rest-swagger": "^1.1.4",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.2.12",
    "@types/express": "^4.17.7",
    "@types/fs-extra": "^9.0.1",
    "@types/mocha": "^8.0.3",
    "@types/morgan": "^1.9.1",
    "@types/nconf": "^0.10.0",
    "@types/node": "^14.6.0",
    "@types/nodegit": "0.26.7",
    "@types/object-hash": "^1.3.3",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-strategy": "^0.2.35",
    "@types/ramda": "^0.27.39",
    "@types/shortid": "^0.0.29",
    "@types/sinon": "^9.0.5",
    "@types/sshpk": "^1.10.5",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "cpr": "^3.0.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "mocha": "^8.1.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.0",
    "rimraf": "^3.0.2",
    "simple-mock": "^0.8.0",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
